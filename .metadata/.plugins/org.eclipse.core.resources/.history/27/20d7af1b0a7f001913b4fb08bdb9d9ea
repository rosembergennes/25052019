//			cliente.setEmail(request.getParameter("email"));
//			cliente.setEndereco(request.getParameter("endereco"));
//			
//			ClienteDao clienteDao = new ClienteDao();
//
//			clienteDao.inserir(cliente);
			
			
		} catch (Exception e) {
			e.printStackTrace();
